{
    "manifest_version": 3,
    "name": "The Margin",
    "minimum_chrome_version": "93",
    "description": "Ask ChatGPT about anything on the web",
    "version": "0.1",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/highlighter-128.png"
    },
    "icons": {
        "16": "images/highlighter-16.png",
        "32": "images/highlighter-32.png",
        "48": "images/highlighter-48.png",
        "128": "images/highlighter-128.png"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["chrome/index.js"],
          "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "chrome/background.js",
        "type": "module"
    },
    "permissions": [
        "tabs", "storage", "identity", "contextMenus"
    ],
    "externally_connectable": {
        "ids": ["*"],
        "matches": ["<all_urls>"]
    },
